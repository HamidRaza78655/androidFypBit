<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlos"
    android:orientation="vertical">
    <EditText android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/edit_text_Plo_name"
        android:paddingLeft="5dp"
        android:hint="Enter Plo Name"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_border"/>

    <EditText
        android:id="@+id/edit_text_plo_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_border"
        android:hint="Enter plo title"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="61dp" />
    <EditText
        android:id="@+id/edit_text_plo_des"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_border"
        android:hint="Enter plo description"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="61dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:id="@+id/btn_add"
            android:text="add"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:id="@+id/btn_previous_degree"
            android:text="Add from previous degree"/>

    </LinearLayout>


</LinearLayout>